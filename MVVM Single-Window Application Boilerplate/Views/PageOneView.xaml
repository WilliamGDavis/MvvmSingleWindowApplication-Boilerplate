<UserControl x:Class="MVVM_Single_Window_Application_Boilerplate.Views.PageOneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Single_Window_Application_Boilerplate.Views"
             xmlns:vm="clr-namespace:MVVM_Single_Window_Application_Boilerplate.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="525">

    <UserControl.DataContext>
        <vm:PageOneViewModel />
    </UserControl.DataContext>

    <DockPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="label" Content="View 1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"/>
            <Button x:Name="button" Content="GoTo Page Two" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="122" Command="{Binding UpdateControl}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
